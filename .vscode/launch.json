{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI - Uvicorn (Hot Reload)",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}